<main>
  <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= image_tag @user.get_profile_image(63,63) %></th>
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </thead>
      </table>
         <div class= "row">
        <%= link_to  edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fa-solid fa-user-gear" do %>
        <% end %>
        </div>
      <h2>New book</h2>
      <% if @book.errors.any? %>
       <%= @book.errors.count %>errors prohibited this obj from being saved:
     <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <%= form_with model: @new_book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
  <tbody>
   <tr>
  <td>
   <%= link_to user_path(@book.user.id) do %>
   <%= image_tag @book.user.get_profile_image(40,40) %> <br>
   <%= @book.user.name %>
   <% end %>
   </td>
  <td><%= @book.title %></td>
  <td><%= @book.body %></td>
  <td><% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id), class: "button btn btn-success" %>
  <% end %></td>
  <td><% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "button btn btn-danger" %>
  <% end %></td>
   </tr>
</tbody>
</table>
</div>
</div>
</div>
</main>
</html>











