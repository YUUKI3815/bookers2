<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
   <%= render 'users/list', user: @user, book: @new_book %>
  </div>
  <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
  <tbody>
  <tr>
  <td>
   <%= link_to user_path(@book.user.id) do %>
   <%= image_tag @book.user.get_profile_image(40,40) %> <br>
   <%= @book.user.name %>
   <% end %>
  </td>
  <td>
   <%= link_to book_path(@book) do %>
   <%= @book.title %>
   <% end %>
  </td>
  <td>
   <%= @book.body %>
  </td>
  <td>
    <% if @book.favorited_by?(current_user) %>
      <p>
      <%= link_to book_favorites_path(@book), method: :delete do %>
        ♥<%= @book.favorites.count %>
      <% end %>
      </p>
      <% else %>
      <p>
      <%= link_to book_favorites_path(@book), method: :post do %>
        ♡<%= @book.favorites.count %>
      <% end %>
      </p>
      <% end %>
  </td>
  <td>
     コメント数:<%= @book.book_comments.count %>
  </td>
  <td>
   <% if @book.user == current_user %>
   <%= link_to "Edit", edit_book_path(@book.id), class: "button btn btn-success" %>
   <% end %>
  </td>
  <td>
   <% if @book.user == current_user %>
   <%= link_to book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"} do %>
   <i class= "button btn btn-danger">Destroy</i>
   <% end %>
   <% end %>
  </td>
  </tr>
</tbody>
</table>
<table class="table">
 <% @book.book_comments.each do |book_comment| %>
 <tr>
  <td>
  <%= link_to user_path(book_comment.user_id) do %>
  <%= image_tag book_comment.user.get_profile_image(40,40) %>
  <% end %>
  <br>
  <%= link_to book_comment.user.name, user_path(book_comment.user) %>
  <td>
  <%= book_comment.comment %>
  </td>
  <% if book_comment.user == current_user %>
  <td>
  <%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete, class:"btn btn-secondary" %>
  </td>
  <% end %>
 </tr>
 <% end %>
</table>
<div class="new_comment">
 <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
 <div class="form-group">
 <%= f.text_area :comment, rows:"5", class:"form-control" %>
 </div>
 <div class="form-group">
 <%= f.submit "送信", class:"btn btn-success" %>
 </div>
 <% end %>
 </div>
</div>
</div>
</div>
</main>











