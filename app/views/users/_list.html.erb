
 <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(63,63) %>
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= user.introduction %></td>
          </tr>
          <tr>
            <th>follows</th>
            <td>
              <%= link_to user_followings_path(user.id) do %>
              <%= user.followings.count %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>follwers</th>
            <td>
              <%= link_to user_followers_path(user.id) do %>
              <%= user.followers.count %>
              <% end %>
            </td>
          </tr>
      </table>
        <div class= "row">
          <p>
      <% if current_user != user %>
      <% if current_user.following?(user) %>
      <%= link_to user_relationships_path(user.id), method: :delete do %>
      <i class= "btn btn-success">フォロー外す</i>
      <% end %>
      <% else %>
      <%= link_to user_relationships_path(user.id), method: :post do %>
      <i class= "btn btn-success">フォローする</i>
      <% end %>
      <% end %>
      <% end %>
        </p>
        <% if current_user == user %>
        <%= link_to edit_user_path(user.id) do %>
        <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
        <% end %>
        <% end %>
        </div>
   <h2>New book</h2>
   <diV>
   <%= form_with model: book do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Book", class:"btn btn-success" %>
    </div>
  <% end %>
</diV>