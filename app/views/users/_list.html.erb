
 <div class="col-md-3">
      <h2>User info</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= image_tag user.get_profile_image(63,63) %></th>
          </tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </thead>
      </table>
         <div class= "row">
        <%= link_to  edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fa-solid fa-user-gear" do %>
        <% end %>
        </div>
      <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book', class: "button btn btn-success" %>
  <% end %>
      </div>