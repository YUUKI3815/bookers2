<table class="table table-hover table-inverse">
 　 <% if @model == 'user' %>
 　 <h3>Users search for "<%= @content %>"</h3>
    <tbody>
      <tr>
      <th>image</th>
      <th>name</th>
    </tr>
      <% @records.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @model == 'book' %>
  <h3>Books search for "<%= @content %>"</h3>
    <tbody>
       <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
      <% @records.each do |book| %>
        <tr>
          <td>
           <%= link_to user_path(book.user.id) do %>
           <%= image_tag book.user.get_profile_image(40,40) %> <br>
           <%= book.user.name %>
           <% end %>
          </td>
          <td>
            <%= link_to book_path(book) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>